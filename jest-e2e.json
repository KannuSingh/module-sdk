{
  "moduleFileExtensions": ["js", "json", "ts"],
  "testRegex": ".e2e-test.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "collectCoverageFrom": ["**/*.(t|j)s"],
  "moduleNameMapper": {
    "^src": "<rootDir>/src",
    "^src/(.*)$": "<rootDir>/src/$1",
    "^test/(.*)$": "<rootDir>/test/$1"
  },
  "coverageDirectory": "../coverage",
  "testEnvironment": "node"
}
